@model IEnumerable<HotelManagementSystem.Models.Admin_RollCreation>

    <link href="~/Content/layout.css" rel="stylesheet" type="text/css" media="all">

@{
    ViewBag.Title = "All Role List";
}


<style>


    tr {
        background-color: #281d44;
    }

</style>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "RollCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.RoleName)
    </td>
    <td>
        @*@Html.ActionLink("Delete", "Delete", "RoleManage", new { rollName =  item.RoleName } );*@
        <form action="RoleManage/Delete" method="POST">
            <input style="visibility:hidden" type="text" name="rollName" value="@item.RoleName" />
            <button type="submit" class="btn"  ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
        </form>
    </td>
</tr>
}

</table>
