@model IEnumerable<HotelManagementSystem.Models.Room>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/layout.css" rel="stylesheet" type="text/css" media="all">
<h2>Hotel Rooms</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoomTypeName)
        </th>
        <th>
            Room Images
            @*@Html.DisplayNameFor(model => model.ImageUrl)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BeddingType.BeddingTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomType.RoomTypeName)
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomTypeName)
            </td>
            <td>
                <img src="@Url.Content(item.ImageUrl) " alt="image not supported" class="img-rounded" height="150" width="150" />
                @*@Html.DisplayFor(modelItem => item.ImageUrl)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeddingType.BeddingTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType.RoomTypeName)
            </td>
            @*<td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RoomId }, new { @class = "btn" }) |
                @Html.ActionLink("Details", "Details", new { id = item.RoomId }, new { @class = "btn" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RoomId }, new { @class = "btn" })
            </td>*@
        </tr>
    }

</table>
